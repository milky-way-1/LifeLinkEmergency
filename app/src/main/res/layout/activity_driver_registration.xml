<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        android:layout_marginTop="25dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="#1A237E"
            android:theme="@style/ThemeOverlay.AppCompat.Light">


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="#1A237E"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Full Name"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Date of Birth"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dobInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Phone Number"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Current Address"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_location"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Professional Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Information"
                android:textColor="#1A237E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Driver's License Number"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_license"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/licenseNumberInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="License Type"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_type"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <AutoCompleteTextView
                    android:id="@+id/licenseTypeDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="License Expiry Date"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/licenseExpiryInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Years of Driving Experience"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_experience"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/experienceInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/emergencyExperienceSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience with Emergency Vehicles"
                android:textColor="#1A237E"
                android:layout_marginTop="16dp"
                app:thumbTint="#1A237E"
                app:trackTint="#E8EAF6"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emergencyExperienceLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Years of Emergency Vehicle Experience"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_ambulance"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emergencyExperienceInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Vehicle Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Information"
                android:textColor="#1A237E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Vehicle Registration Number"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_license_plate"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vehicleRegInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Vehicle Features -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Features"
                android:textColor="#1A237E"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/acCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air Conditioning"
                android:textColor="#1A237E"
                app:buttonTint="#1A237E"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/oxygenCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oxygen Cylinder Holder"
                android:textColor="#1A237E"
                app:buttonTint="#1A237E"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/stretcherCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stretcher"
                android:textColor="#1A237E"
                app:buttonTint="#1A237E"/>

            <!-- Insurance Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance Information"
                android:textColor="#1A237E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Insurance Policy Number"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_insurance"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/insurancePolicyInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Insurance Expiry Date"
                app:boxStrokeColor="#1A237E"
                app:hintTextColor="#5C6BC0"
                android:textColorHint="#5C6BC0"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="#1A237E"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/insuranceExpiryInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#1A237E"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:text="Submit Registration"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                android:backgroundTint="#1A237E"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>